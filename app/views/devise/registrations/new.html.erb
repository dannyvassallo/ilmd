<div id="registration" class="container">
  <div class="row">
    <h1>Sign up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :first_name, :class => 'reglabel' %><br />
      <%= f.text_field :first_name, autofocus: true %></div>

      <div><%= f.label :last_name, :class => 'reglabel' %><br />
      <%= f.text_field :last_name %></div>

      <div><%= f.label :email, :class => 'reglabel' %><br />
      <%= f.email_field :email, autofocus: true %></div>

      <div><label class="reglabel">Password <i>(Minimum 8 characters)</i></label><br />
        <%= f.password_field :password, autocomplete: "off" %></div>

      <div><%= f.label :password_confirmation, :class => 'reglabel' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

      <div><%= f.submit "Sign up", :class => 'btn btn-primary'%></div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
