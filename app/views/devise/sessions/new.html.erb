<div id="registration" class="container">
  <div class="row">
    <h1>Log in</h1>
    <br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div><%= f.label :email, :class => 'reglabel' %><br />
      <%= f.email_field :email, autofocus: true, :placeholder => "yourname@email.com", :class => 'input-md' %></div>

      <div><%= f.label :password, :class => 'reglabel' %><br />
        <%= f.password_field :password, :placeholder => "********", autocomplete: "off" %></div>

      <% if devise_mapping.rememberable? -%>
        <div class="rmbrme"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>
      <br>
      <div><%= f.submit "Log in", :class => 'btn btn-success' %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
