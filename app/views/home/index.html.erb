<h1>Listing microposts</h1>


<%= form_tag microposts_path, :method => :get do %>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Search", :name => nil, :class => "btn btn-default postsearch" %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Drname</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.drname %></td>
        <td><%= micropost.content %></td>
        <td><%= micropost.user.first_name %> <%= micropost.user.last_name %></td>
        <td><%= link_to 'Show', micropost %></td>
        <% if micropost.user == current_user %>
        <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micropost', new_micropost_path %>
