<div class="container">
  <div class="row">
    <div class="col-lg-12 main-logo">
      <img src="https://s3.amazonaws.com/myfangate.com/ilovemydoctor/logo.jpg">
    </div>
    <div id="searchzone" class="col-lg-12">
      <%= form_tag root_path, :method => :get do %>
      <i class="fa fa-search"></i>
      <%= text_field_tag :search, params[:search], placeholder: 'Search for your doctor...' %>
      <%= submit_tag "Search", :name => nil, :class => "btn btn-default" %>
      <% end %>
    </div>
    <br>

    <table>
      <thead>
        <tr>
          <th>Drname</th>
          <th>Content</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @microposts.each do |micropost| %>
          <tr>
            <td><%= micropost.drname %></td>
            <td><%= micropost.content %></td>
            <td><%= micropost.user.first_name %> <%= micropost.user.last_name %></td>
            <td><%= link_to '<i class="fa fa-eye"></i> View'.html_safe, micropost, :class => "btn btn-default" %></td>
            <% if micropost.user == current_user %>
            <td><%= link_to '<i class="fa fa-pencil-square-o"></i> Edit'.html_safe, edit_micropost_path(micropost), :class => "btn btn-default" %></td>
            <td><%= link_to '<i class="fa fa-trash-o"></i> Delete'.html_safe, micropost, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <div id="searchzone" class="col-lg-12">
      <%= link_to 'Add a Note for Your Doctor', new_micropost_path, :class => "btn btn-default"  %>
    </div>
  </div>
</div>
